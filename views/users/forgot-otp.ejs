<%-include('../layouts/user/header.ejs')%>

<body class=" mt-5" >

    <div class="container pt-5 mt-5">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-md-9 ml-5 pl-5">
                                <div class="p-5 ml-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">OTP Verification</h1>
                                        <p class="mb-4">Please enter the one-time password<br>to verify your account
                                            A code has been sent to</p>
                                        <small>+91 <%=userData.mobileNumber %></small>

                                    </div>
                                    <form class="user" method="post" action="/forgot-otp">
                                        <input type="hidden" name="number" value="<%=userData.mobileNumber%>">
                                        <div class="form-group">
                                            <input  name="otp" maxlength="6" type="number" class="text-center form-control form-control-user"
                                                id="exampleInputEmail" aria-describedby="emailHelp"
                                                placeholder="X X X X X X" maxlength="6">
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block" >Validate</button>
                                    </form>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

