  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
        <a class="btn btn-primary" href="login.html">Logout</a>
      </div>
    </div>
  </div>
</div>

<%-include('../layouts/admin/footer.ejs')%>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>  
    
    const weekSales = JSON.parse('<%- JSON.stringify(weekSales) %>');
    console.log(weekSales);
  
    document.addEventListener('DOMContentLoaded', function() {
      const ctx = document.getElementById('barCart');
      const labels = weekSales.map(sale => sale._id);
      const data1 = weekSales.map(sale => sale.totalSales);
      console.log(data1, '......', labels)
  
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: labels,
          datasets: [{
            label: '# of Sales',
            data: data1,
            borderWidth: 1
          }]
        },
        options: {
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
      const data = {
        labels: ['<%= paymentType[0]._id %>', '<%= paymentType[1]._id %>', '<%= paymentType[2]._id %>'],
        datasets: [{
          label: '',
          data: ['<%= paymentType[0].totalSales %>', '<%= paymentType[1].totalSales %>', '<%= paymentType[2].totalSales %>'],
          backgroundColor: [
            'rgb(255, 99, 132)',
            'rgb(54, 162, 235)',
            'rgb(255, 205, 86)'
          ],
          hoverOffset: 4
        }]
      };
    
  
      const ctxx = document.getElementById('myChart2');
      new Chart(ctxx, {
        type: 'pie',
        data: data,
        options: {
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
    });
</script>
