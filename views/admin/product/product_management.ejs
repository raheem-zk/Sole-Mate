<%- include('../../layouts/admin/header.ejs') %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
            <%-include('../../layouts/admin/nav.ejs')%>

                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                  <h1 class="h3 mb-2 text-gray-800 text-center">Product Management</h1>

                    <!-- Page Heading -->
                    

                    <!-- DataTales Example -->
                    <a href="/admin/dashboard/product/add-product"><button type="button" class="btn btn-primary ">Add Product</button></a>
                    <div class="card shadow mb-4 mt-2">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Product Management</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>NO</th>
                                            <th>Product</th>
                                            <th>Brand</th>
                                            <th>Stock</th>
                                            <th>Category</th>
                                            <th>Image</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>NO</th>
                                            <th>Product</th>
                                            <th>Brand</th>
                                            <th>Stock</th>
                                            <th>Category</th>
                                            <th>Image</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <% if (product.length > 0) { %>
                                          <% product.forEach((item, index) => { %>
                                            <tr>
                                              <td><%= index + 1 %></td>
                                              <td><%= item.name %></td>
                                              <td><%= item.brand %></td>
                                              <td><%= item.stock %></td>
                                              <td><%= item.category.categoryName %></td>
                                              <td>
                                                <div class="image-scroll" style="overflow-y: scroll; white-space: nowrap; height: 100px">
                                                  <ul>
                                                    <% item.images.forEach((image) => { %>
                                                      <li style="display: block; margin-right: 10px;">
                                                        <img src="/proImages/<%= image %>" alt="Product Image" width="100%" height="100">
                                                      </li>
                                                    <% }) %>
                                                  </ul>
                                                </div>
                                              </td>
                                              
                                              <% if (item.status == true) { %>
                                                <td class="text-success statuss<%= item.productId %>"><%= item.status %></td>
                                              <% } else { %>
                                                <td class="text-danger statuss<%= item.productId %>"><%= item.status %></td>
                                              <% } %>
                                              <td>
                                                <ul>                                                    
                                                <div class="status<%= item.productId %>">
                                                  <% if (item.status == true) { %>
                                                    <button type="button" onclick="productStatusAction('<%= item.productId %>', '<%= item.status %>')" class="btn btn-danger">Unlist</button>
                                                  <% } else { %>
                                                    <button type="button" onclick="productStatusAction('<%= item.productId %>', '<%= item.status %>')" class="btn btn-success">List</button>
                                                  <% } %>
                                                  <a href="/admin/dashboard/product/edit-product<%=item.productId%>"><button type="button" class="btn btn-primary mt-3">Edit</button></a>
                                                  </ul>
                                                </div>
                                              </td>
                                              
                                            </tr>
                                          <% }) %>
                                        <% } else { %>
                                          <tr>
                                            <td colspan="7">Empty!</td>
                                          </tr>
                                        <% } %>
                                      </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>


<%- include('../../layouts/admin/footer.ejs') %>
